<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%- include layouts/header%>
  </head>
  <body>
    <form action="/post/<%=id%>/<%=idg%>" method="POST" class="col s6 offset-s4">
      <div class="container">
        <div class="row">
          <div class="col s12">
            <h4><%= grupName%></h4>
          </div>
          <div class="input-field col s7 ">
            <ul class="collection">
            <% data.forEach(dat => { %>
              <span class="badge"><a href="/post/delete/<%=dat.id%>/<%=dat.GroupId%>">x</a></span>
              <!-- <span class="badge">Created By <%= dat.User.username %></span> -->

              <li class="collection-item"><%= dat.post %></li>

            <% }) %>
            </ul>
            <input placeholder="Write Here..." type="text" name="post" class="validate">
            <button class="btn waves-effect waves-light" type="submit" name="action">Post</button>
          </div>
          <div class="input-field col s2">
            <ul class="collection">
              <% data.forEach(dat => { %>
                <%if(dat.User.id == id){%>
                  <li class="collection-item">You Said</li>
                <%}else{%>
                  <li class="collection-item"><%= dat.User.username %> Said</li>
                <%}%>
              <% }) %>
            </ul>
          </div>
          <div class="input-field col s3 ">
            <ul class="collection">
              <li class="collection-item"><h6>Contributor</h6></li>
            <% contr.forEach(dat => { %>
              <li class="collection-item"><%= dat %></li>
            <% }) %>
            </ul>
          </div>
        </div>
      </div>
    </form>
  </body>
</html>
