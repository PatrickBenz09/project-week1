<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%- include layouts/header%>
  </head>
  <body>
    <div class="row">
      <form class="col s6 offset-s4" action="/menu/edit" method="POST">
        <h4>Edit Form</h4>
        <div class="row">
          <div class="input-field col s3">
            <input value='<%= data.first_name%>' name='first_name' type="text" class="validate">
          </div>
          <div class="input-field col s3">
            <input value='<%= data.last_name%>' name='last_name'  type="text" class="validate">
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <input disabled value='<%= data.username%>' name='username' type="text" class="validate">
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <input value='<%= data.email%>' name='email' type="email" class="validate">
          </div>
        </div>

        <button class="btn waves-effect waves-light" type="submit" name="action">Edit
        </button>
      </form>
    </div>
  </body>
</html>
