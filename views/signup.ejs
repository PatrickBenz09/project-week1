<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%- include layouts/header%>
  </head>
  <body>

  <div class="row">
    <form class="col s6 offset-s4" action="/signup" method="POST">
      <h4>SignUp Form</h4>
      <div class="row">
        <div class="input-field col s3">
          <input placeholder="First Name" name='first_name' type="text" class="validate" required="" aria-required="true">
        </div>
        <div class="input-field col s3">
          <input placeholder="Last Name" name='last_name'  type="text" class="validate" required="" aria-required="true">
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Username" name='username' type="text" class="validate" required="" aria-required="true">
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Password" name='password' type="password" class="validate" required="" aria-required="true">
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Email" name='email' type="email" class="validate">
        </div>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">SignUp
      </button>
    </form>
  </div>

  </body>
</html>
